{% extends 'base.html.twig' %}

{% block title %}Bauers Kalender{% endblock %}

{% block body %}


  <h1 class="h1 text-center">
    {{ bauer.getAar() }}
  </h1>
  <p class="alert-danger" role="" >Påsken ligger den {{ bauer.pdg }}/{{ bauer.pmd }} </p>

	<div class="table-responsive-sm">
  <table class="table table-light table-sm small">
  
  {# read and display just one flash message type #}
  {% for message in app.flashes('notice') %}
    <div class="flash-notice">
        {{ message }}
    </div>
  {% endfor %}

  <thead class="thead-light">
    {% for i in bauer.months() %}
      <th colspan=3 scope="col" class="text-center" width=8%> {{i}} </th>
    {% endfor %}
  </thead>

    <tbody>
      {% for d in 1..31 %}
        <tr>
            {% for mm in 1..12 %}

            
            	{# Herfra er der 4 muligheder
            	   - Almindelig hverdag
            	   - Lørdag
            	   - Søn eller helligdag
            	   - Ugyldig dag (f.eks 31. Juli) #}
            
              {% if bauer.setDato(d, mm) and bauer.getAdatoClass == 1 %}
                <th scope="row"> {{ bauer.getUgedag() }} </th> 
                <td class="text-right">{{ d }}</td>
                <td class="text-nowrap" data-toggle="tooltip" data-placement="top" title="Latinsk betegnelse"> {{ bauer.getDescription() }} </td>
              {% elseif bauer.getAdatoClass == 2 %}
                <th class= "alert-secondary" scope="row"> {{ bauer.getUgedag() }} </th> 
                <td class="text-right">{{ d }}</td>
                <td class="text-nowrap" data-toggle="tooltip" data-placement="top" title="Latinsk betegnelse"> {{ bauer.getDescription() }} </td>
              {% elseif bauer.getAdatoClass == 3 %}
                <th class= "alert-secondary" scope="row"> {{ bauer.getUgedag() }} </th> 
                <td class="text-right alert-secondary">{{ d }}</td>
                <td class="text-nowrap alert-secondary" data-toggle="tooltip" data-placement="top" title="Latinsk betegnelse"> {{ bauer.getDescription() }} </td>
              {% else %}
                <td colspan= 3 />
              {% endif %}
          {% endfor %}
        </tr>
      {% endfor %}

    </tbody>
  </table>
  </div>
  


{% endblock %}
