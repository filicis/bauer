{% extends 'base.html.twig' %}

{% block title %}Bauers Kalender{% endblock %}

{% block body %}


  <h1 class="h1 text-center">
    {{ bauer.getAar() }}
  </h1>
  <p>PÃ¥sken ligger den {{ bauer.pdg }}/{{ bauer.pmd }} </p>

	<div class="table-responsive-sm">
  <table class="table table-light table-sm small">
  
  {# read and display just one flash message type #}
  {% for message in app.flashes('notice') %}
    <div class="flash-notice">
        {{ message }}
    </div>
  {% endfor %}

  <thead class="thead-light">
    {% for i in bauer.months() %}
      <th colspan=3 scope="col" class="text-center" width=8%> {{i}} </th>
    {% endfor %}
  </thead>

    <tbody>
      {% for d in 1..31 %}
        <tr>
            {% for mm in 1..12 %}
              {% if bauer.setDato(d, mm) == true %}
                <div {% if bauer.getUgedag() == 6 %} class="alert alert-dark" role="alert"  {% endif %} >
                <th class="alert alert-dark" role="alert"scope="row"> {{ bauer.getUgedag() }} </th> 
                <td class="text-right">{{ d }}</td>
                <td class="text-nowrap" data-toggle="tooltip" data-placement="top" title="Latinsk betegnelse"> {{ bauer.getDescription() }} </td>
								</div>
              {% else %}
                <td colspan= 3 />
              {% endif %}
          {% endfor %}
        </tr>
      {% endfor %}

    </tbody>
  </table>
  </div>
  


{% endblock %}
